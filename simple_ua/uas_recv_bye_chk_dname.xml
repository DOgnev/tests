<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">
<scenario name = "UAS answer CGG тест">

<Global variables="CHK_DNAME" />
<User variables="chk_dname,dummy" />
<Reference variables="dummy"/>

<nop hide="true">
    <action>
        <assignstr assign_to="chk_dname" value="[$CHK_DNAME]"/>
    </action>
</nop>


<recv request="INVITE">
<action>
    <ereg regexp="[0-9]+" search_in="hdr" header="To:" assign_to="number" />
    <ereg regexp="\"([\w-_\.]+)\"\s+<sip.*>" search_in="hdr" header="From:" assign_to="dummy,dname" />
    <assignstr assign_to="local_tag" value="[call_number][pid]"/>
</action>
</recv>

<send>
<![CDATA[
    SIP/2.0 100 Trying
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<send>
<![CDATA[
    SIP/2.0 180 Ringing
    [last_Via:]
    [last_From:]
    [last_To:];tag=[$local_tag]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<pause milliseconds="2500"/>

<send retrans="500">
<![CDATA[
    SIP/2.0 200 OK
    [last_Via:]
    [last_From:]
    [last_To:];tag=[$local_tag]
    [last_Call-ID:]
    [last_CSeq:]
    Contact: <sip:[$number]@[local_ip]:[local_port];user=phone>
    Content-Type: application/sdp
    Content-Length: [len]

    v=0
    o=tester 123456 654321 IN IP[local_ip_type] [local_ip]
    s=B conversation
    c=IN IP[local_ip_type] [local_ip]
    t=0 0
    m=audio [auto_media_port] RTP/AVP 8
    a=rtpmap:8 PCMA/8000
]]>
</send>

<nop hide="true">
   <action>
          <exec rtp_stream="/home/vragov/Work/sipp/sipp/sipp-3.4.1/pcap/test.alaw,-1,8" />
     </action>
</nop>

<recv request="ACK"></recv>

<recv request="BYE"></recv>

<send>
<![CDATA[
    SIP/2.0 200 OK
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Content-Length: 0
]]>
</send>

<nop hide="true">
    <strcmp assign_to="compare_result" variable="chk_dname" variable2="dname"/>
</nop>

<nop hide="true" test="compare_result" next="end"/>

<nop hide="true">
    <action>
        <exec int_cmd="stop_now"/>
    </action>
</nop>

<label id="end">
</scenario>
