<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">
<scenario name = "Simple UAS recv BYE req100rel">

<Global variables="CHK_DNAME,CHK_NUMBER" />
<User variables="chk_dname,chk_number,dummy,dname" />
<Reference variables="dummy,dname"/>


<nop hide="true" condexec="CHK_DNAME">
    <action>
        <assignstr assign_to="chk_dname" value="[$CHK_DNAME]"/>
    </action>
</nop>

<nop hide="true" condexec="CHK_NUMBER">
    <action>
        <assignstr assign_to="chk_number" value="[$CHK_NUMBER]"/>
    </action>
</nop>

<recv request="INVITE">
<action>
	<ereg regexp="(\w)*@" search_in="hdr" header="To:" assign_to="number" />
	<ereg regexp=".*" search_in="hdr" header="From:" assign_to="inv_from" />
	<ereg regexp=".*" search_in="hdr" header="To:" assign_to="inv_to" />
	<ereg regexp=".*" search_in="hdr" header="Call-ID:" assign_to="inv_call_id" />
	<ereg regexp=".*" search_in="hdr" header="Via:" assign_to="inv_via" />
	<ereg regexp="[0-9]+" search_in="hdr" header="CSeq:" assign_to="inv_cseq" />
	<ereg regexp="\s?\"?([^\"]+)\"?\s+<sip:" search_in="hdr" header="From:" assign_to="dummy,dname" />
	<assignstr assign_to="local_tag" value="[call_number][pid]"/>
</action>
</recv>

<send>
<![CDATA[
	SIP/2.0 100 Trying
	[last_Via:]
	[last_From:]
	[last_To:]
	[last_Call-ID:]
	[last_CSeq:]
	Content-Length: 0
]]>
</send>

<send>
<![CDATA[
	SIP/2.0 180 Ringing
	[last_Via:]
	[last_From:]
	[last_To:];tag=[$local_tag]
	[last_Call-ID:]
	[last_CSeq:]
	Require: 100rel
	Rseq: [cseq]
	Contact: <sip:[$number][local_ip]:[local_port]>
	Content-Type: application/sdp
	Content-Length: [len]

	v=0
	o=tester 123456 654321 IN IP[local_ip_type] [local_ip]
	s=A conversation
	c=IN IP[local_ip_type] [local_ip]
	t=0 0
	m=audio [auto_media_port] RTP/AVP 8
	a=rtpmap:8 PCMA/8000
]]>
</send>


<recv request="PRACK"></recv>

<send>
<![CDATA[
	SIP/2.0 200 OK
	[last_Via:]
	[last_From:]
	[last_To:]
	[last_Call-ID:]
	[last_CSeq:]
	Content-Length: 0
]]>
</send>



<send retrans="500">
<![CDATA[
	SIP/2.0 200 OK
	Via:[$inv_via]
	From:[$inv_from]
	To:[$inv_to];tag=[$local_tag]
	Call-ID:[$inv_call_id]
	CSeq: [$inv_cseq] INVITE
	Contact: <sip:[$number][local_ip]:[local_port];user=phone>
	Content-Length: 0
]]>
</send>


<recv request="ACK"></recv>


<recv request="BYE"></recv>

<send>
<![CDATA[
	SIP/2.0 200 OK
	[last_Via:]
	[last_From:]
	[last_To:]
	[last_Call-ID:]
	[last_CSeq:]
	Content-Length: 0
]]>
</send>

<pause milliseconds="2000"/>

<nop hide="true" condexec="CHK_DNAME">
    <action>
        <strcmp assign_to="compare_result" variable="chk_dname" variable2="dname"/>
    </action>
</nop>

<nop hide="true" condexec="compare_result">
    <action>
        <warning message="Check DName failed. chk_dname: [$chk_dname]; dname: [$dname]; compare_result: [$compare_result]"/>
        <exec int_cmd="stop_now"/>
    </action>
</nop>

<nop hide="true" condexec="CHK_NUMBER">
    <action>
        <strcmp assign_to="compare_result" variable="chk_number" variable2="remote_number"/>
    </action>
</nop>

<nop hide="true" condexec="compare_result">
    <action>
    	<warning message="Check number failed. chk_number: [$chk_number]; number: [$remote_number]; compare_result: [$compare_result]"/>
        <exec int_cmd="stop_now"/>
    </action>
</nop>
</scenario>
