  ],
  "Tests": [
    {
      "Name": "conversation_timeout_test",
      "Description": "conversation_timeout_test",
      "TestProcedure": [
        {
          "StartUA": [
            {
              "Type": "User",
              "UserId": "1",
              "NeedAuth" : "True",
              "Name": "UAS_CONF_TIMER",
              "Commands": [
                {
                  "SourceFile": "core_timers/uas_bye.xml",
                  "Options": "-m 1",
                  "NeedAuth": "True",
                  "SippType": "uas",
                  "Timeout": "7s"
                }
              ]
            },
            {
              "Type": "User",
              "UserId": "2",
              "NeedAuth" : "True",
              "Name": "UAC_CONF_TIMER",
              "Commands": [
                {
                  "SourceFile": "core_timers/uac_bye.xml",
                  "Options": "-m 1 -set CDPN %%1.Number%% -set CDPNDOM %%1.SipDomain%%",
                  "NeedAuth": "True",
                  "SippType": "uac",
                  "Timeout": "7s"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "Name": "no_answer_timeout_test",
      "Description": "no_answer_timeout_test",
      "TestProcedure": [
        {
          "StartUA": [
            {
              "Type": "User",
              "UserId": "1",
              "NeedAuth" : "True",
              "Name": "UAS_NOANSWER_TIMER",
              "Commands": [
                {
                  "SourceFile": "core_timers/uas_cancel.xml",
                  "Options": "-m 1",
                  "NeedAuth": "True",
                  "SippType": "uas",
                  "Timeout": "6s"
                }
              ]
            },
            {
              "Type": "User",
              "UserId": "2",
              "NeedAuth" : "True",
              "Name": "UAC_NOANSWER_TIMER",
              "Commands": [
                {
                  "SourceFile": "core_timers/uac_recv_480.xml",
                  "Options": "-m 1 -set CDPN %%1.Number%% -set CDPNDOM %%1.SipDomain%%",
                  "NeedAuth": "True",
                  "SippType": "uac",
                  "Timeout": "10s"
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "Name": "disable_timeouts",
      "Description": "Проверка того, что вызовы не падают при уствновке таймеров no_answer_timeout и conversation_timeout в disabled. Bug #80285",
      "TestProcedure": [
        {
          "CoconCommand": [
            {
                "command1" : "/domain/%%DEV_DOM%%/timers/core/set conversation_timeout disabled",
                "command2" : "/domain/%%DEV_DOM%%/timers/core/set no_answer_timeout disabled"
            }
          ]
        },
        {
          "StartUA": [
            {
              "Type": "User",
              "UserId": "1",
              "NeedAuth" : "True",
              "Name": "UAS_RECV_BYE",
              "Commands": [
                {
                  "SourceFile": "simple_ua/uas_recv_bye.xml",
                  "Options": "-m 1",
                  "NeedAuth": "True",
                  "SippType": "uas",
                  "Timeout": "20s"
                }
              ]
            },
            {
              "Type": "User",
              "UserId": "2",
              "NeedAuth" : "True",
              "Name": "UAC_SEND_BYE",
              "Commands": [
                {
                  "SourceFile": "simple_ua/uac_send_bye.xml",
                  "Options": "-m 1 -set CDPN %%1.Number%% -set CDPNDOM %%1.SipDomain%% -d 10000",
                  "NeedAuth": "True",
                  "SippType": "uac",
                  "Timeout": "20s"
                }
              ]
            }
          ]
        },
        {
          "CoconCommand": [
            {
              "command1" : "/domain/%%DEV_DOM%%/timers/core/clean conversation_timeout",
              "command2" : "/domain/%%DEV_DOM%%/timers/core/clean no_answer_timeout"
            }
          ]
        }
      ]
    }
  ]
}