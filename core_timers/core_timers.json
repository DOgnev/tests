  "PreCoconConf": [
    {
      "command1" : "/domain/%%DEV_DOM%%/timers/core/set conversation_timeout 5",
      "command2" : "/domain/%%DEV_DOM%%/timers/core/set no_answer_timeout 4"
    }
  ],

  "PostCoconConf": [
