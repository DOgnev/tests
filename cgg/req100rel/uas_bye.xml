<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE scenario SYSTEM "sipp.dtd">

<scenario name = "uas_script">

<Global variables="COUNTER"/>

<nop hide="true">
    <action>
        <assignstr assign_to="user_counter" value="[$COUNTER]"/>
    </action>
</nop>

<recv request="INVITE">
<action>
	<ereg regexp="(\w)*@" search_in="hdr" header="To:" assign_to="number" />
	<ereg regexp=".*" search_in="hdr" header="From:" assign_to="inv_from" />
	<ereg regexp=".*" search_in="hdr" header="To:" assign_to="inv_to" />
	<ereg regexp=".*" search_in="hdr" header="Call-ID:" assign_to="inv_call_id" />
	<ereg regexp=".*" search_in="hdr" header="Via:" assign_to="inv_via" />
	<ereg regexp="[0-9]+" search_in="hdr" header="CSeq:" assign_to="inv_cseq" />
</action>
</recv>

<send>
<![CDATA[
	SIP/2.0 100 Trying
	[last_Via:]
	[last_From:]
	[last_To:]
	[last_Call-ID:]
	[last_CSeq:]
	Content-Length: 0
]]>
</send>

<send>
<![CDATA[
	SIP/2.0 180 Ringing
	[last_Via:]
	[last_From:]
	[last_To:];tag=123456
	[last_Call-ID:]
	[last_CSeq:]
	Require: 100rel
	Rseq: [cseq]
	Contact: <sip:[$number][local_ip]:[local_port]>
	Content-Type: application/sdp
	Content-Length: [len]

	v=0
	o=[$number] 123456 654321 IN IP[local_ip_type] [local_ip]
	s=A conversation
	c=IN IP[local_ip_type] [local_ip]
	t=0 0
	m=audio [auto_media_port] RTP/AVP 8 101
	a=rtpmap:8 PCMA/8000
	a=rtpmap:101 telephone-event/8000/1
	a=fmtp:101 0-11
]]>
</send>


<recv request="CANCEL" optional="true" next="1"></recv>
<recv request="PRACK"></recv>

<send>
<![CDATA[
	SIP/2.0 200 OK
	[last_Via:]
	[last_From:]
	[last_To:]
	[last_Call-ID:]
	[last_CSeq:]
	Content-Length: 0
]]>
</send>

<recv request="CANCEL" next="1" timeout="1000" ontimeout="send200"></recv>

<label id="send200"/>


<send retrans="500">
<![CDATA[
	SIP/2.0 200 OK
	Via:[$inv_via]
	From:[$inv_from]
	To:[$inv_to];tag=123456
	Call-ID:[$inv_call_id]
	CSeq: [$inv_cseq] INVITE
	Contact: <sip:[$number][local_ip]:[local_port];user=phone>
	Content-Length: 0
]]>
</send>


<recv request="ACK">
    <action>
        <log message="[$user_counter] ACK [timestamp]"/>
    </action>
</recv>


<recv request="BYE">
    <action>
        <log message="[$user_counter] BYE [timestamp]"/>
    </action>
</recv>

<send next="2">
<![CDATA[
	SIP/2.0 200 OK
	[last_Via:]
	[last_From:]
	[last_To:]
	[last_Call-ID:]
	[last_CSeq:]
	Contact: <sip:[$number][local_ip]:[local_port]>
	Content-Length: 0
]]>
</send>

<label id="1"/>
<send>
<![CDATA[
    SIP/2.0 200 OK
    [last_Via:]
    [last_From:]
    [last_To:]
    [last_Call-ID:]
    [last_CSeq:]
    Contact: <sip:[$number]@[local_ip]:[local_port]>
    Content-Length: 0
]]>
</send>

<send>
<![CDATA[
	SIP/2.0 487 Request Cancelled
	[last_Via:]
	[last_From:]
	[last_To:]
	[last_Call-ID:]
	CSeq: [$inv_cseq] INVITE
	Content-Length: 0
]]>
</send>

<recv request="ACK"></recv>

<label id="2"/>



</scenario>
